<h1><%= @sponsored_post.title %></h1>

<div class="row">
   <div class="col-md-8">
     <div class="row">
       <div class="col-md-12">
         <h4><%= @sponsored_post.price %></h4>
       </div>
     </div>
     <div class="row">
       <div class="col-md-12">
         <p><%= @sponsored_post.body %></p>
       </div>
     </div>
   </div>


   <div class="col-md-4">
     <%= link_to "Edit", edit_topic_post_path(@sponsored_post.topic, @sponsored_post), class: 'btn btn-success' %>
     <%= link_to "Delete Post", [@sponsored_post.topic, @sponsored_post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
     <%= link_to "Return to Main", @sponsored_post.topic, class: 'btn btn-success' %>
   </div>
</div>
